<idea-plugin>
    <id>com.autotestshortcut</id>
    <name>AutoTestShortcutPlugin</name>
    <version>1.0</version>

    <description><![CDATA[Shortcut to Enable AutoTest. Requires 40 chars]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="AutoTestShortcutAction" class="com.AutoTestShortcutAction" text="AutoTestShortcutAction">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
